<body>
  <div class="body">
      <div class="container">
        <p id="notice">Signed in successfully.</p>
      <div class="row">
      <div class="col-xs-3">

<!-- ユーザーインフォ領域 -->
    <h2>User info</h2>
     <%= attachment_image_tag @user, :image, size: '30x30',　format: 'jpeg', fallback: "no_image.jpg" %>
        <table class="table">
          <tbody><tr></tr> 
                 <tr>
              	  <th>name</th>
              	  <th><%= @user.name %></th>
                 </tr>
                 <tr>
              	  <th>introduction</th>
              	  <th><%= @user.introduction %></th>
                </tr>
          </tbody>
        </table>
      <div class="row">
      	　<% if @user.id == current_user.id %>
             <p><%= link_to "", edit_user_path(@user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user" %></p>
            <% end %>
      </div>
<!-- ブック編集領域 -->
    <h2>New book</h2>
      <form class="new_book" id="new_book" action="/books" accept-charset="UTF-8" method="post"><input name="utf8" type="hidden" value="✓"><input type="hidden" name="authenticity_token" value="kdjtc3jSZSBZcUuae5lEf1FshNbVhgCM4mA5JRAeDcT1lJ82SvzIi1p4M9nteYivIPzpsgOJsb1OcuNgs38NKg==">

    <div class="field row">
        <label for="book_title">Title</label>
        <input class="col-xs-12 book_title" type="text" name="book[title]" id="book_title">
      </div>

      <div class="field row">
        <label for="book_opinion">Opinion</label>
        <textarea class="col-xs-12 book_body" name="book[body]" id="book_body"></textarea>
      </div>

      <div class="actions row">
        <input type="submit" name="commit" value="Create Book" class="btn btn-primary col-xs-12" data-disable-with="Create Book">
      </div>
    　</form>
  　</div>

<!-- BODY右部分 -->
<div class="col-xs-9">
    <h2>Books</h2>

    <table class="table table-hover table-inverse">
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  <tbody>
  	<% @books.each do |book|%>
<tr>
<td>
  <%= attachment_image_tag book.user, :image, size: '30x30',　format: 'jpeg', fallback: "no_image.jpg" %>
</td>
<td><%= book.title%></td>
<td><%= link_to(book.body,"/books/#{book.id}")%></td>
</tr>
<% end %>
  </tbody>
</table>
  </div>
</div>
      </div>
    </div>
<!-- フッター部分 -->
    <footer>
  <div class="container">
  	<div class="row">
    	<div class="col-xs-3 col-xs-offset-9">
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>
</body>
