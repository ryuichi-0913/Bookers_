<h1>Books</h1>


<table>
<thead>
  <tr>
    <th>title</th> <th>body</th> <th colspan="3"></th>
  </tr>
</thead>

<tbody>
	<% @lists.each do |list| %>
  <tr>
    <td><%= list.title %></td>
    <td><%= list.body %></td>
    <td><%=link_to "Show",book_path(list.id) %></td>
    <td> <%=link_to "Edit",edit_book_path(list.id) %></td>
    <td><%=link_to "Destroy",book_path(list.id), method: :delete, "data-confirm" => "Are you sure?" %>

    </td>
  </tr>
<% end %>
</tbody>

</table>


<!-- この下に投稿画面 -->
<h3>New book</h3>
<%= form_for(@list) do |f| %>
<!-- エラーのところ -->
<% if @list.errors.any? %>
<h3><%= @list.errors.count %> errors prohibited this book from being saved</h3>
    <ul>
      <% @list.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>

<% end %>


<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>
<br><%= f.submit 'Create Book' %></br>

<% end %>




